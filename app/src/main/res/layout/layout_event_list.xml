<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardElevation="3dp"
        app:cardCornerRadius="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:id="@+id/frameContainer">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/ivEventPhoto"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:id="@+id/tvEventName"
                    android:padding="3dp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:singleLine="true"
                    android:textColor="@android:color/white"
                    tools:text="Jaypee Institute"/>
            </FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:weightSum="10"
                android:id="@+id/llEventDetail"
                android:orientation="horizontal"
                android:layout_below="@+id/frameContainer">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:id="@+id/rlEventDate">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvEventDate"
                        android:layout_marginLeft="15dp"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:text="08"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvEventMonth"
                        android:layout_marginLeft="15dp"
                        android:layout_below="@+id/tvEventDate"
                        android:gravity="center"
                        android:text="AUG"
                        android:layout_marginBottom="5dp"
                        android:textSize="20sp"/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="7"
                    android:layout_marginLeft="15dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvEventDescription"
                        tools:text="Enjoy To the fullest By uisng our App"
                        android:textSize="15sp"
                        android:layout_marginTop="15dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvEventLocation"
                        android:layout_marginTop="5dp"
                        tools:text="/@Jaypee Institute"
                        android:textSize="15dp"
                        android:textStyle="italic|bold"/>
                </LinearLayout>
            </LinearLayout>
            <com.mikhaellopez.circularimageview.CircularImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/ivEventLogo"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                tools:src="@mipmap/ic_launcher"
                android:layout_marginBottom="-30dp"
                app:civ_border_width="4dp"
                app:civ_shadow="true"
                app:civ_shadow_radius="5"
                app:civ_shadow_color="#8BC34A"
                android:layout_marginRight="10dp"
                android:layout_above="@+id/llEventDetail"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>